---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
import LinkedInLink from "./LinkedInLink.astro";
import GitHubLink from "./GitHubLink.astro";
---

<header
  class="bg-white/75 sticky top-0 z-50 backdrop-blur border-b border-gray-200"
>
  <nav class="container mx-auto p-4">
    <div class="flex justify-between items-center">
      <a href="/">
        <h2 class="text-xl font-bold text-gray-800">
          {SITE_TITLE}
        </h2>
      </a>

      <div class="flex items-center space-x-8">
        <div class="flex item-center space-x-4">
          <HeaderLink href="/">Home</HeaderLink>
          <HeaderLink href="/blog">Blog</HeaderLink>
          <HeaderLink href="/about">About</HeaderLink>
        </div>

        <div class="flex items-center space-x-4">
          <GitHubLink class="text-gray-600 hover:text-indigo-600" />
          <LinkedInLink class="text-gray-600 hover:text-indigo-600" />
        </div>
      </div>
    </div>
  </nav>
</header>
